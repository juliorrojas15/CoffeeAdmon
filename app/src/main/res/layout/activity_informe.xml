            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                style="@style/sty_TextoValoresInforme"
                android:id="@+id/tvFacturado" 
                android:text="@string/si_Dinero"/>
