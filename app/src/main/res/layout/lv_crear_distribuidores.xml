<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lv_Crear_Distr_Nombre"
            style="@style/sty_TextoListView"
            android:textAlignment="textStart"
            android:layout_weight="1.5"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/lv_Crear_Distr_Celular"
            style="@style/sty_TextoListView"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textSize="10sp"/>
        <TextView
            android:id="@+id/lv_Crear_Distr_Ahorro"
            style="@style/sty_TextoListView"
            android:textAlignment="textEnd"
            android:layout_weight="1"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/lv_Crear_Distr_Deuda"
            style="@style/sty_TextoListView"
            android:textAlignment="textEnd"
            android:layout_weight="1"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/lv_Crear_Distr_Tz"
            style="@style/sty_TextoListView"
            android:textAlignment="textEnd"
            android:layout_weight="0.5"
            android:textSize="10sp"/>

    </LinearLayout>
</LinearLayout>